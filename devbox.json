{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.10.7/.schema/devbox.schema.json",
  "packages": [
    "ruby_3_1@latest",
    "bundler@latest"
  ],
  "env": {
  },
  "shell": {
    "init_hook": [
      "echo 'Installing gem dependencies...'",
      "bundle install >/dev/null",
      "echo 'Serving your site...'",
      "bundle exec jekyll s --drafts >/dev/null 2>&1 &",
      "alias draft='bundle exec jekyll draft'",
      "alias publish='./publish_post.sh draft'",
      "alias post='bash ./tools/publish_post.sh new'"
      // "alias post='bash ./tools/new_post.sh'"
    ],
    "scripts": {
      "test": [
        "echo \"Error: no test specified\" && exit 1"
      ]
    }
  }
}
